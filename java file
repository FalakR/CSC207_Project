import com.google.maps.*;
import com.google.maps.model.*;

public class GoogleMapsDemo {
    public static void main(String[] args) {
        String apiKey = "AIzaSyAKxoKIGDAmPYI9-f6sV1rnnnBBmcFtzl0";

        // Initialize the Geocoding API client
        GeoApiContext context = new GeoApiContext.Builder()
                .apiKey(apiKey)
                .build();

        String address = "27 King's College Cir, Toronto, ON M5S 1A1";

        try {
            // Use the Geocoding API to retrieve location data
            GeocodingResult[] results = GeocodingApi.geocode(context, address).await();

            // Extract the location (latitude and longitude)
            LatLng location = results[0].geometry.location;

            // Print the location details
            System.out.println("Latitude: " + location.lat);
            System.out.println("Longitude: " + location.lng);

            // Open a web browser with Google Maps to view the location
            String mapUrl = "https://www.google.com/maps?q=" + location.lat + "," + location.lng;
            java.awt.Desktop.getDesktop().browse(java.net.URI.create(mapUrl));

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
